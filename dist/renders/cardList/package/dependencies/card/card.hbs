    <div class="cardWrapper">

        <section id="{{cardName}}">
            <div class="card card1 color{{copycolour}}">
                <a href="{{link}}">
                    <img src="https://{{image.image.defaultHost}}/i/dfs/{{image.image.name}}?w=295" alt="{{_title}}">
                    <div class="cardlistCopy">
                        <h2 style="color:#{{copycolour}}">{{description}}</h2>
                    </div>
                    <div class="cl_btn_wrapper">
                        <div class="cardlist_button">
                            <p style="color:#{{copycolour}};border: 2px solid #{{copycolour}}">{{linkValue}}</p>
                        </div>
                    </div>
                </a>
            </div>
            <div class="clearfix"></div>
        </section>

    </div>
    